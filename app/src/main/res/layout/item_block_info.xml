<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<import type="android.view.View" />

		<variable
			name="viewModel"
			type="org.oregongoestocollege.itsaplan.viewmodel.BlockInfoViewModel" />
	</data>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@{viewModel.isEnabled ? @drawable/button_background : @drawable/button_background_disabled}"
		android:minHeight="@dimen/min_touch_target_unit"
		android:paddingStart="@dimen/baseline_unit"
		android:paddingEnd="@dimen/baseline_unit"
		android:paddingTop="@dimen/baseline_unit_half"
		android:paddingBottom="@dimen/baseline_unit_half"
		android:layout_marginBottom="@dimen/baseline_unit"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textview_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="@{viewModel.title}"
			tools:text="1. Explore your options." />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:orientation="vertical"
			android:visibility="@{viewModel.isEnabled ? View.VISIBLE : View.GONE}">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@{viewModel.count}"
				tools:text="0 of 3" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/completed" />
		</LinearLayout>
	</RelativeLayout>
</layout>