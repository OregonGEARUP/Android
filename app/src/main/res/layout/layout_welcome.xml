<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_gradient">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingBottom="@dimen/activity_horizontal_margin"
		android:paddingEnd="@dimen/baseline_unit_3x"
		android:paddingStart="@dimen/baseline_unit_3x"
		android:paddingTop="@dimen/activity_horizontal_margin">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@drawable/checkpoint_background"
			android:orientation="vertical"
			android:paddingBottom="@dimen/activity_horizontal_margin"
			android:paddingEnd="@dimen/baseline_unit_3x"
			android:paddingStart="@dimen/baseline_unit_3x"
			android:paddingTop="@dimen/activity_horizontal_margin">

			<TextView
				android:id="@+id/text1"
				style="@style/GearUpTextAppearance.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="@string/welcome_title"
				android:textColor="@color/colorPrimary" />

			<TextView
				android:id="@+id/text2"
				style="@style/GearUpTextAppearance.SubTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="@dimen/baseline_unit"
				android:layout_marginTop="@dimen/baseline_unit"
				android:text="@string/welcome_message" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="@dimen/baseline_unit"
				android:layout_marginTop="@dimen/baseline_unit"
				android:foreground="@drawable/welcome_gradient"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="@dimen/baseline_unit_half"
					android:orientation="vertical">

					<TextView
						android:id="@+id/text_num_9"
						style="@style/GearUpWelcomeCount"
						android:text="9" />

					<TextView
						android:id="@+id/text_num_7"
						style="@style/GearUpWelcomeCount"
						android:text="7" />

					<TextView
						android:id="@+id/text_num_5"
						style="@style/GearUpWelcomeCount"
						android:text="5" />

					<TextView
						android:id="@+id/text_num_3"
						style="@style/GearUpWelcomeCount"
						android:text="3" />

					<TextView
						android:id="@+id/text_num_1"
						style="@style/GearUpWelcomeCount"
						android:text="1" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:orientation="vertical">

					<TextView
						android:id="@+id/text_num_8"
						style="@style/GearUpWelcomeCount"
						android:text="8" />

					<TextView
						android:id="@+id/text_num_6"
						style="@style/GearUpWelcomeCount"
						android:text="6" />

					<TextView
						android:id="@+id/text_num_4"
						style="@style/GearUpWelcomeCount"
						android:text="4" />

					<TextView
						android:id="@+id/text_num_2"
						style="@style/GearUpWelcomeCount"
						android:text="2" />
				</LinearLayout>
			</LinearLayout>

			<Button
				android:id="@+id/button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/baseline_unit_2x"
				android:paddingEnd="@dimen/baseline_unit_2x"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/button_accent"
				android:text="@string/welcome_confirm"
				android:textColor="@android:color/white" />
		</LinearLayout>

	</FrameLayout>
</ScrollView>
