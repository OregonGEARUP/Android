			android:text="@string/header_checklist" />

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/title" />

	</RelativeLayout>
</layout>
