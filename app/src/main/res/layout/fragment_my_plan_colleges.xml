<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/white">

	<data>

		<import type="android.view.View" />

		<variable
			name="isLoading"
			type="boolean" />

		<variable
			name="uxContext"
			type="org.oregongoestocollege.itsaplan.viewmodel.CollegesViewModel" />
	</data>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ProgressBar
			android:id="@+id/indeterminateBar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"
			tools:visibility="visible"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:layout_marginBottom="@dimen/baseline_unit_2x"
			android:layout_marginEnd="@dimen/baseline_unit_2x"
			android:onClick="@{(view) -> uxContext.onAddCollege(view)}"
			android:src="@drawable/ic_add_black_24dp"
			android:visibility="@{isLoading ? View.GONE : View.VISIBLE}"
			/>
	</RelativeLayout>
</layout>