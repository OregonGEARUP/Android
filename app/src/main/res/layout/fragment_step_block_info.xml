<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="org.oregongoestocollege.itsaplan.ChecklistFragment">

	<data>

		<import type="android.view.View" />

		<variable
			name="uxContext"
			type="org.oregongoestocollege.itsaplan.viewmodel.BlockInfoListViewModel" />
	</data>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="@dimen/activity_vertical_margin">

			<ProgressBar
				android:id="@+id/progress_bar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:visibility="@{uxContext.dataLoading ? View.VISIBLE : View.GONE}" />

			<TextView
				android:id="@+id/title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/GearUpTextAppearance.SubTitle"
				android:layout_marginBottom="@dimen/activity_horizontal_margin"
				android:text="@string/header_checklist" />

			<android.support.v7.widget.RecyclerView
				android:id="@+id/recycler_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@id/title" />

		</RelativeLayout>

	</FrameLayout>
</layout>
