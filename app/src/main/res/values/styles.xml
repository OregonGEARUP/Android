<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimaryTurquoise</item>
		<item name="colorPrimaryDark">@color/colorPrimaryTurquoiseDarker20</item>
		<item name="colorAccent">@color/colorPrimaryLimeGreen</item>
	</style>

	<!-- splash screen theme -->
	<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_background</item>
	</style>

	<style name="GearUpTextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="GearUpTextAppearance.Title">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="GearUpTextAppearance.SubTitle">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="GearUpTextAppearance.Small">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="GearUpTextAppearance.Option">
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">?android:colorPrimaryDark</item>
		<item name="android:drawablePadding">@dimen/baseline_unit</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="GearUpOptionSeparator">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">@dimen/baseline_unit</item>
		<item name="android:paddingBottom">@dimen/baseline_unit</item>
		<item name="android:src">@drawable/separator</item>
		<item name="android:importantForAccessibility">no</item>
	</style>

	<style name="GearUpButton" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/button_normal</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="GearUpDateButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:background">@drawable/button_outline</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="GearUpButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:minWidth">@dimen/min_touch_target_unit</item>
		<item name="android:textColor">?android:colorPrimary</item>
	</style>

	<style name="GearUpRemoveButton" parent="GearUpButtonBorderless">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<!-- various styles for the sections of data within pages, mostly my plan and password -->

	<!-- normally at the top of the page before we start our section -->
	<style name="GearUpMessage1" parent="@android:style/TextAppearance">
		<item name="android:paddingTop">@dimen/baseline_unit_2x</item>
		<item name="android:paddingBottom">@dimen/baseline_unit_2x</item>
		<item name="android:paddingStart">@dimen/baseline_unit_2x</item>
		<item name="android:paddingEnd">@dimen/baseline_unit_2x</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<!-- normally at the top of a section -->
	<style name="GearUpMessage2" parent="@android:style/TextAppearance">
		<item name="android:paddingTop">@dimen/baseline_unit</item>
		<item name="android:paddingBottom">@dimen/baseline_unit</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="GearUpSectionTitle">
		<item name="android:textSize">16sp</item>
		<item name="android:background">@color/colorPrimaryDark</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:paddingTop">@dimen/baseline_unit</item>
		<item name="android:paddingBottom">@dimen/baseline_unit</item>
		<item name="android:paddingStart">@dimen/baseline_unit_2x</item>
		<item name="android:paddingEnd">@dimen/baseline_unit_2x</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="GearUpSectionSubTitle">
		<item name="android:background">@color/colorPrimayLightBlue</item>
		<item name="android:textSize">16sp</item>
		<item name="android:paddingStart">@dimen/baseline_unit_2x</item>
		<item name="android:paddingEnd">@dimen/baseline_unit_2x</item>
		<item name="android:paddingTop">@dimen/baseline_unit</item>
		<item name="android:paddingBottom">@dimen/baseline_unit_1_half</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="GearUpSectionSubTitle.Gray" parent="GearUpSectionSubTitle">
		<item name="android:background">@color/colorAccentLightGray</item>
	</style>

	<style name="GearUpSectionLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingStart">@dimen/baseline_unit_2x</item>
		<item name="android:paddingEnd">@dimen/baseline_unit_2x</item>
		<item name="android:paddingTop">@dimen/baseline_unit_half</item>
		<item name="android:paddingBottom">@dimen/baseline_unit</item>
	</style>

	<!-- TextInput control styles -->
	<style name="GearUpTextMaxLengthDefault">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:inputType">text</item>
		<item name="android:maxLines">1</item>
		<item name="android:maxLength">128</item>
	</style>

	<style name="GearUpTextMaxLengthSmall">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:inputType">text</item>
		<item name="android:maxLines">1</item>
		<item name="android:maxLength">32</item>
	</style>

</resources>
