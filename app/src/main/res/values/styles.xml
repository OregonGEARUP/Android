<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimaryTurquoise</item>
		<item name="colorPrimaryDark">@color/colorPrimaryTurquoiseDarker20</item>
		<item name="colorAccent">@color/colorPrimaryLimeGreen</item>
	</style>

	<!-- splash screen theme -->
	<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_background</item>
	</style>

	<style name="GearUpTextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="GearUpTextAppearance.Title">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="GearUpTextAppearance.SubTitle">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="GearUpTextAppearance.Small">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="GearUpButton" parent="Widget.AppCompat.Button.Colored">
		<item name="android:background">@drawable/button_normal</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<!-- password control styles -->
	<style name="GearUpPasswordLayout">
		<item name="android:paddingStart">@dimen/baseline_unit_2x</item>
		<item name="android:paddingEnd">@dimen/baseline_unit_2x</item>
		<item name="android:paddingTop">@dimen/baseline_unit_2x</item>
		<item name="android:paddingBottom">@dimen/baseline_unit_2x</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="GearUpPasswordTitle">
		<item name="android:background">@color/colorPrimaryDark</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16sp</item>
		<item name="android:paddingStart">@dimen/baseline_unit_2x</item>
		<item name="android:paddingEnd">@dimen/baseline_unit_2x</item>
		<item name="android:paddingTop">@dimen/baseline_unit_2x</item>
		<item name="android:paddingBottom">@dimen/baseline_unit_2x</item>
		<item name="android:layout_marginTop">@dimen/baseline_unit</item>
	</style>
	<style name="GearUpPasswordSubTitle">
		<item name="android:background">@color/colorPrimayLightBlue</item>
		<item name="android:textSize">16sp</item>
		<item name="android:paddingStart">@dimen/baseline_unit_2x</item>
		<item name="android:paddingEnd">@dimen/baseline_unit_2x</item>
		<item name="android:paddingTop">@dimen/baseline_unit</item>
		<item name="android:paddingBottom">@dimen/baseline_unit</item>
	</style>

</resources>
